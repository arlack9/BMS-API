@model BMS_UI.Dto.BookDto

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Update Book</h2>
                </div>

                <div class="card-body">

                    @* Show error message from ViewBag (same request) *@
                    @if (ViewBag.BadRequest != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.BadRequest
                        </div>
                    }

                    @* Show success message from TempData (after redirect) *@
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="UpdateBook" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* <div class="form-group mb-3">
                            <label asp-for="Id" class="form-label">Id</label>
                            <input asp-for="Id" class="form-control" placeholder="Enter Book Id" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div> *@

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter Book Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Author" class="form-label">Author</label>
                            <input asp-for="Author" class="form-control" placeholder="Enter Author name" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PublishedYear" class="form-label">Year</label>
                            <input asp-for="PublishedYear" class="form-control" type="number" placeholder="Enter published year" />
                            <span asp-validation-for="PublishedYear" class="text-danger" ></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a asp-controller="Library" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
