

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
           
            <a class="btn btn-primary" asp-area="" asp-controller="Library" asp-action="AddBook">
            <i class="bi bi-journal-plus"></i>
            Add new Book
                
            </a>

        </div>
        <div class="col-6 text-end">
            <h2>Books</h2>
        </div>
    </div>
</div>

@* Add this block to your Index.cshtml *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">
        @ViewBag.Success
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th>Title</th>
            <th>Author</th>
            <th>PublishedYear</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var entry in Model)
            {
                <tr>
                    <td>
                       @entry.Title
                    </td>
                    <td>
                        @entry.Author
                    </td>
                    <td>
                        @entry.PublishedYear
                    </td>
                    <td>  <a asp-action="UpdateBook" asp-route-id="@entry.Id" class="btn btn-sm btn-primary">Edit</a></td>
                    <td>
                        <button onclick="deleteBook(@entry.Id)" class="btn btn-sm btn-danger">Delete</button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts
{
    <script>
        function deleteBook(id)
        {
            if(confirm("Are you sure , want to delete this book? "+ id))
            {

                //url
                //type (delete)
                // success -> visually remove job posting
                //fail -> show an error message

                $.ajax({

                    url:"@Url.Action("DeleteBook", "Library")/"+id , //Libray/delete/5
                    type: "delete",

                    success: function(result){
                        $("#book-" + id).remove();


                    },
                    error: function (err){
                        alert("An error occurred")
                    }
                });

            }

        }
    </script>
}